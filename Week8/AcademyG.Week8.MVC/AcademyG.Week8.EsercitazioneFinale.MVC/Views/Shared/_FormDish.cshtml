@model DishViewModel

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" />
    <span asp-validation-for="Description"></span>
</div>

<div class="form-group">
    <label asp-for="DishType">Type</label>
    <select asp-for="DishType" asp-items="Html.GetEnumSelectList<DishType>()" class="form-control">
        <option value="">Please select Tipology</option>
    </select>
</div>


<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" />

</div>

