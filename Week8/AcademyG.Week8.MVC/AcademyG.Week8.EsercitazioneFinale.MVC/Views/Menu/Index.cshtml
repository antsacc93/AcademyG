@model IEnumerable<MenuViewModel>

<table class="table table-hover">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>

                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>