@model ProductViewModel

<h1>Product Code @Model.ProductCode</h1>

<div class="row">
    <div class="col-3"></div>
    <form class="col-lg-6 col-md-6 col-sm-12" asp-controller="Products" asp-action="Edit" method="post">

        <partial name="_Form" model="Model" />

        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Back To List</a>
    </div>
</div>

