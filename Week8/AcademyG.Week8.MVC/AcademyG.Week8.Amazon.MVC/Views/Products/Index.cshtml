@model IEnumerable<ProductViewModel>

<div class="row">
    <div class="col-3"></div>

    <div class="col-lg-6 col-md-6 col-sm-12">
        <h1> People data</h1>
        <br />
        <a class="btn btn-success" asp-controller="Products" asp-action="Create" role="button">New Product</a>
        <p />
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductCode</td>
                        <td>@product.Description</td>
                        <td>@product.Price €</td>
                        <td>@product.Type.ToString()</td>
                        <td>
                            <a type="button" value="Detail" asp-controller="Products" asp-action="Detail" asp-route-id="@product.ID" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                            <a type="button" value="Edit" asp-controller="Products" asp-action="Edit" asp-route-id="@product.ID" class="btn btn-success"><i class="fa fa-edit"></i></a>
                            <a type="button" asp-controller="Products" asp-action="Delete" asp-route-id="@product.ID" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th> @Model.Count() </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
        <div class="col-3"></div>
    </div>
</div>